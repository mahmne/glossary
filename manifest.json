{
  "manifest_version": 2,

  "name": "Glossary",
  "description": "Extension to print selected text",
  "version": "1.0",
  "icons": {
    "128": "./assets/icon128.png",
    "48": "./assets/icon48.png",
    "16": "./assets/icon16.png"
  },

  "background": {
    "scripts": ["./js/eventPage.js"],
    "persistent": false
  },

  "permissions": [
          "contextMenus"
  ],
  "browser_action": {
    "default_title": "Click on Glassory",
    "default_popup": "popup.html"
  }
}
